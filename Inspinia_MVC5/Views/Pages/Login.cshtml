@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<main id="appLogin">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                @*<h1 class="logo-name">SafeOps</h1>*@
                <img src="~/Images/logo-t.png" width="250" />
            </div>
            <h3>Bienvenido</h3>
            <form id="formLogin" class="m-t" role="form" action="#">
                <div class="form-group">
                    <input type="email" class="form-control" v-model="send.userName" placeholder="Username" name="Username" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" v-model="send.password" placeholder="Password" name="Password" required="">
                </div>
                <button type="button" v-on:click="login()" class="btn btn-primary block full-width m-b">Login</button>

                <a href="@Url.Action("ForgotPassword", "Account")"><small>Olvidé mi contraseña</small></a>
                <p class="text-muted text-center"><small>¿Aún sin cuenta?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Register", "Pages")">Crear cuenta</a>
            </form>
            <p class="m-t"> <small>Yei3 &copy; 2019</small> </p>
        </div>
    </div>

</main>


@section scripts{
    <environment names="Development,Staging,Production">        
        <script src="~/Scripts/app/login.js"></script>
    </environment>
}