@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Olvidé contraseña";
}

<main id="appForget">


    <div class="passwordBox animated fadeInDown">
        <div class="row">

            <div class="col-md-12">
                <div class="ibox-content">

                    <h2 class="font-bold">Olvidé mi contraseña</h2>

                    <p>
                        Escriba su correo electrónico y su contraseña será enviada a usted.
                    </p>

                    <div class="row">

                        <div class="col-lg-12">
                            <form id="formForget" class="m-t" role="form">
                                <div class="form-group">
                                    <input type="email" v-model="send.userName"  class="form-control" placeholder="Email address" required="">
                                </div>

                                <button type="button" v-on:click="sendmypassword()" class="btn btn-primary block full-width m-b">Enviar mi contraseña</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-6">
                Yei3 Software
            </div>
            <div class="col-md-6 text-right">
                <small>© 2019</small>
            </div>
        </div>
    </div>

</main>


@section scripts{
<environment names="Development,Staging,Production">   
    <script type="text/javascript">
        var forget = new Vue({
            el: '#appForget',
            data: function () {
                return {
                    send: {
                        userName: '',
                    },
                    alert: false,
                    error: true,
                    msg: ''
                };
            },
            mounted: function () {
                var self = this;
                $("body").keypress(function (e) {
                    if (e.which === 13) {
                        self.sendmypassword();
                    }
                });
            },
            methods: {
                sendmypassword: function () {
                    var self = this,
                        form = $("#formForget");
                    form.validate({
                        focusCleanup: true,
                        rules: {
                            UserName: {
                                required: true,
                                email: true
                            }                          
                        },
                    });

                    if (form.valid()) {
                        toggleLoader();
                        self.$http.post('/Account/Forgot', JSON.stringify(self.send)).then(function (response) {
                            toggleLoader();
                            switch (response.body.status) {
                                case 1:

                                    swal("Envío correcto", "Se ha enviado la contraseña al correo seleccionado.", "success")
                                        .then((value) => {
                                            location.href = "/";
                                        });

                                    
                                  
                                    break;
                                case 2:
                                    self.alert = true;
                                    self.error = true;
                                    self.msg = response.body.msg;
                                    swal("Error", self.msg, "error");

                                    break;
                                default:
                                    console.log(response.body.status);
                                    self.alert = false;
                                    break;
                            }
                            self.send.userName = '';
                            self.send.password = '';
                            form.clearForm();
                        }, function () {
                            console.log('ocurrio un error');
                        });
                    } else {
                    }
                }
            }
        });
    </script>

</environment >
}
